@page "{id:int}"
@model MiguelBonelloEPSolution.Pages.Polls.DetailsModel

<h2>@Model.Poll.Title</h2>
<h4>@Model.Poll.Question</h4>
<p>Option 1: @Model.Poll.Option1Text</p>
<p>Option 2: @Model.Poll.Option2Text</p>
<p>Option 3: @Model.Poll.Option3Text</p>

<form method="post" action="/Poll/Vote">
    <input type="hidden" name="pollId" value="@Model.Poll.Id" />
    <div>
        <input type="radio" id="option1" name="vote" value="1" />
        <label for="option1">@Model.Poll.Option1Text</label>
    </div>
    <div>
        <input type="radio" id="option2" name="vote" value="2" />
        <label for="option2">@Model.Poll.Option2Text</label>
    </div>
    <div>
        <input type="radio" id="option3" name="vote" value="3" />
        <label for="option3">@Model.Poll.Option3Text</label>
    </div>
    <button type="submit">Vote</button>
</form>
